<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Back Button"
            android:padding="30dp"
            android:src="@drawable/outline_arrow_back_black_24dp" />

        <ImageButton
            android:id="@+id/editDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Edit Button"
            android:padding="30dp"
            android:src="@drawable/outline_edit_black_24dp" />
    </LinearLayout>



    <ImageView
        android:id="@+id/audio_image"
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/outline_image_black_24dp" />

    <TextView
        android:id="@+id/audio_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/audio_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/audio_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Album"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/seekbar_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="0:00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="0:00"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <!-- Display currently playing audio file name -->


        <!-- Backward button -->

        <!-- Stop/Play button -->
        <ImageButton
            android:id="@+id/backwardButton"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Backward Button"
            android:padding="30dp"
            android:src="@drawable/baseline_fast_rewind_black_24dp" />

        <ImageButton
            android:id="@+id/stopPlayButton"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Stop/Play Button"
            android:padding="16dp"
            android:src="@drawable/baseline_play_circle_filled_black_24dp" />

        <!-- Forward button -->
        <ImageButton
            android:id="@+id/forwardButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Forward Button"
            android:padding="30dp"
            android:src="@drawable/baseline_fast_forward_black_24dp" />

        <!-- Mode button -->
        <ImageButton
            android:id="@+id/modeButton"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Mode Button"
            android:padding="30dp" />
    </LinearLayout>


</LinearLayout>